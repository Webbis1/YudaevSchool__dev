mixin header-course()
     .header__course.gradient-border
        .header__course-title
            span.gradient-border Web-дизайн с нуля
        .header__course-image
            img(src="./assets/images/Checker.png", alt="alt") 
        +green-arrow().header__course-cta

header.header.container
    nav.header__desktop.row
        .header__logo.row
            .header__logo-image
                img(src="./assets/images/logo.svg", alt="")
            h1.header__title Yudaev School
        .header__menu.gradient-border.row
            .header__burger.header__link.gradient-border.row 
                .header__burger-icon.gradient-border
                        label.hamburger
                            input(type="checkbox")
                            svg(viewBox="0 0 32 32")
                                path.line.line-top-bottom(d="M27 10 13 10C10.8 10 9 8.2 9 6 9 3.5 10.8 2 13 2 15.2 2 17 3.8 17 6L17 26C17 28.2 18.8 30 21 30 23.2 30 25 28.2 25 26 25 23.8 23.2 22 21 22L7 22")
                                path.line(d="M7 16 27 16")
                .header__burger-text Курсы
            .header__links.row
                a(href="#").link.header__link.gradient-border Материалы
                a(href="#").header__link.gradient-border Блог
                a(href="#").header__link.gradient-border Центр карьеры
                a(href="#").header__link.gradient-border О школе
                a(href="#").header__link.gradient-border.header__link_green Бесплатный курс

            .header__courses.column
                .wrapper.gradient-border.column
                    .header__section.column
                        +side-media("Бесплатные программы").header__section-title
                        .header__section-content
                            +header-course
                            +header-course
                            +header-course
                            +header-course
                            +header-course
                            +header-course
                            
                    .header__section.column
                        +side-media("Бесплатные программы").header__section-title
                        .header__section-content
                            +header-course
                            +header-course
                            +header-course
                            +header-course
                            +header-course
                            
                            