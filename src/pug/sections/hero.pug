                    img(loading="lazy", src="./assets/images/hero/slider-icon/blander.svg", alt="blander")
                .hero__icon.hero__icon--circle  
                    img(loading="lazy", src="./assets/images/hero/slider-icon/circle.svg", alt="circle")
                .hero__slide-light


            .hero-slide.hero__slide.swiper-slide
