                .footer__messengers-section
                    h3.footer__messengers-title МЕССЕНДЖЕРЫ
                    .footer__messengers-buttons
                        a.footer__messenger-button Telegram
                        a.footer__messenger-button WhatsApp

    .footer__mobile-social-section
      h3.footer__socials-title СОЦ. СЕТИ
      .footer__mobile-social-grid
        each social in [{icon: 'be.svg', name: 'Behance'}, {icon: 'pint.svg', name: 'Pinterest'}, {icon: 'inst.svg', name: 'Instagram'}, {icon: 'tg.svg', name: 'Telegram'}, {icon: 'vk.svg', name: 'VK'}, {icon: 'yt.svg', name: 'YouTube'}]
            .footer__social-item
                .footer__social-icon
