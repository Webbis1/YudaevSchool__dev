            each social in [{icon: 'be.svg', name: 'Behance'}, {icon: 'pint.svg', name: 'Pinterest'}, {icon: 'inst.svg', name: 'Instagram'}, {icon: 'tg.svg', name: 'Telegram'}, {icon: 'vk.svg', name: 'VK'}, {icon: 'yt.svg', name: 'YouTube'}]
